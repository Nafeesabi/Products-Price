<div class="container" >
    

    <form action="">
        
        <div>
            <div class="row container">
                
                <div class="form-group col-md-8">
                    <label for="text">Search</label>
                    <input type="text" name="" id="" class="form-control input-md" ng-model="search" placeholder="Search by product , Category name  or Id">
               </div>
              <div class="form-group col-md-4" >
                <label for="text">Sort By</label>
                <select name="" id=""  class="form-control input-md">

                    <option value="">Default </option>
                    <option value="">Product Name A-Z</option>
                    <option value="">Product Name Z-A</option>

                </select>


            </div>
            </div>

        </div>

    </form>


    <div class="container">

        <table class="table table-striped table-bordered table-condensed table-responsive">
            <thead>
                <tr>
                    <th class="col-md-2"> Sl.no</th>
                    <th class="col-md-2"> Id</th>
                    <th class="col-md-8"> Category Name</th>
                    



                    <th class="col-md-1">Edit</th>
                    <th class="col-md-1"><span class="glyphicon glyphicon-trash"></span></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="n in myData | filter: search">
                    <td>{{$index+1}}</td>
                    <td>{{n.id}}</td>
                    <td>{{n.name}}</td>
                    

                    <td><button class="btn btn-primary btn-sm " ng-click=""> <span class="glyphicon glyphicon-edit "></span></button> </td>

                    <td>
                        <a class="btn btn-danger btn-sm" ng-click="DeleteData(n.id)">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                        
                    </td>
                </tr>

            </tbody>
        </table>



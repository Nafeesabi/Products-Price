    </div>

    <div class="pull-right"> <a class="btn btn-primary add-btn" style="border-radius:50%" href="#" data-backdrop="static" data-toggle="modal" ng-click="initNewEmployee()" data-target="#employeeWriterModal">+</a></div>

    <div  method="post">

        <div id="employeeWriterModal" class="modal fade" role="dialog" style="height:600px">
            <div class="modal-dialog modal-md">

                <div class="modal-content">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">PRODUCT PRICE</h4>
                        </div>
                        <form action="" method="post">
                        <div class="modal-body">


                                
                                
                                
                                <div class="form-group">
                                    <label>Category Name :</label>
                                    <input type="text" ng-model="save.name" ng-change="Updatep(id)">
                                     
                                    
                                    <br />
                                </div>
                                
                               
                                <div class="modal-footer">
                                    <input type="submit" class="btn btn-success" value="Add" ng-click="Savechanges()"/>
                                    <button type="button" ng-disabled="saving" class="btn btn-danger"  data-dismiss="modal">Cancel</button>

                                </div>
                        
                            </div>

                        </form>
                        </div>
                            
                        </div>

                    </div>

                </div>
            </div>
       </div>

